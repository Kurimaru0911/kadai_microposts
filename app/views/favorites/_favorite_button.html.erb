<% if current_user.favorite?(micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete, style: :'display: inline' }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入り解除', class: 'btn btn-warning btn-xs' %>
  <% end %>
  <%#= link_to 'お気に入り解除', favorite_path(current_user.favorites.find_by(micropost_id: micropost.id),
                                              micropost_id: micropost.id),
                                              method: :delete, class: 'btn btn-warning btn-xs' %>
<% else %>
  <%= form_for(current_user.favorites.build, html: { style: :'display: inline' }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-warning btn-xs' %>
  <% end %>
  <%#= link_to 'お気に入り', favorites_path(micropost_id: micropost.id),
                            method: :post, class: 'btn btn-warning btn-xs' %>
<% end %>
